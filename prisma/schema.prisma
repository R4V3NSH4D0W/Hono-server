generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  phone     String?
  avatar    String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  content   String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  images    Image[]  @relation("PostImages")
  user      User     @relation(fields: [userId], references: [id])

  @@map("posts")
}

model Image {
  id        String   @id @default(cuid())
  filename  String
  path      String
  url       String
  mimeType  String
  size      Int
  bucket    String
  postId    String?
  createdAt DateTime @default(now())
  post      Post?    @relation("PostImages", fields: [postId], references: [id])

  @@map("images")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}
