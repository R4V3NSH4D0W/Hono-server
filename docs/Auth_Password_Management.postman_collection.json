{
  "info": {
    "name": "Auth & Password Management API",
    "description": "Complete testing collection for authentication and password management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "reset_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "test_email",
      "value": "testuser@example.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. User Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"name\": \"Test User\",\n  \"password\": \"originalpassword123\",\n  \"phone\": \"+1234567890\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "2. Login (Original Password)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.to.have.status(200)) {",
              "    const responseJson = pm.response.json();",
              "    pm.collectionVariables.set('jwt_token', responseJson.data.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"originalpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "3. Change Password (Authenticated)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"originalpassword123\",\n  \"newPassword\": \"changedpassword456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "change-password"]
        }
      }
    },
    {
      "name": "4. Login (Changed Password)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.to.have.status(200)) {",
              "    const responseJson = pm.response.json();",
              "    pm.collectionVariables.set('jwt_token', responseJson.data.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"changedpassword456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "5. Request Password Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot-password"]
        }
      }
    },
    {
      "name": "6. Validate Reset Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password/validate/{{reset_token}}",
          "host": ["{{baseUrl}}"],
          "path": [
            "api",
            "auth",
            "reset-password",
            "validate",
            "{{reset_token}}"
          ]
        }
      }
    },
    {
      "name": "7. Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"newPassword\": \"resetpassword789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset-password"]
        }
      }
    },
    {
      "name": "8. Login (Reset Password)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.to.have.status(200)) {",
              "    const responseJson = pm.response.json();",
              "    pm.collectionVariables.set('jwt_token', responseJson.data.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"resetpassword789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "9. Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "logout"]
        }
      }
    },
    {
      "name": "ERROR: Change Password - Wrong Current",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"wrongpassword\",\n  \"newPassword\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "change-password"]
        }
      }
    },
    {
      "name": "ERROR: Change Password - Weak Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"resetpassword789\",\n  \"newPassword\": \"123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "change-password"]
        }
      }
    },
    {
      "name": "ERROR: Change Password - Same Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"resetpassword789\",\n  \"newPassword\": \"resetpassword789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "change-password"]
        }
      }
    },
    {
      "name": "ERROR: Change Password - No Auth",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"resetpassword789\",\n  \"newPassword\": \"anothernewpassword\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "change-password"]
        }
      }
    },
    {
      "name": "ERROR: Reset Invalid Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"invalid-token-123\",\n  \"newPassword\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset-password"]
        }
      }
    },
    {
      "name": "ERROR: Reset Weak Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"newPassword\": \"123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset-password"]
        }
      }
    }
  ]
}
